<anchor xml:id="__p_i_d_controller_8cpp_source_1l00007"/>00007 PIDController::PIDController(<emphasis role="keywordtype">double</emphasis>&#32;Kp,&#32;<emphasis role="keywordtype">double</emphasis>&#32;wi,&#32;<emphasis role="keywordtype">double</emphasis>&#32;wb,&#32;<emphasis role="keywordtype">double</emphasis>&#32;wh,&#32;<emphasis role="keywordtype">double</emphasis>&#32;Te)&#32;{
<anchor xml:id="__p_i_d_controller_8cpp_source_1l00008"/>00008 &#32;&#32;&#32;&#32;_K&#32;=&#32;Kp*(wi*Te+2)*(wh*Te+2)/(2*((wi*Te+2)));
<anchor xml:id="__p_i_d_controller_8cpp_source_1l00009"/>00009 &#32;&#32;&#32;&#32;_a0&#32;=&#32;(wi*Te&#32;-2)/(wi*Te&#32;+&#32;2);
<anchor xml:id="__p_i_d_controller_8cpp_source_1l00010"/>00010 &#32;&#32;&#32;&#32;_a1&#32;=&#32;(wh*Te&#32;-2)/(wh*Te&#32;+&#32;2);
<anchor xml:id="__p_i_d_controller_8cpp_source_1l00011"/>00011 &#32;&#32;&#32;&#32;_b0&#32;=&#32;(wi*Te&#32;-2)/(wi*Te&#32;+&#32;2);
<anchor xml:id="__p_i_d_controller_8cpp_source_1l00012"/>00012 
<anchor xml:id="__p_i_d_controller_8cpp_source_1l00013"/>00013 &#32;&#32;&#32;&#32;_error&#32;=&#32;<emphasis role="keyword">new</emphasis>&#32;<emphasis role="keywordtype">double</emphasis>[_delay+1]{0};
<anchor xml:id="__p_i_d_controller_8cpp_source_1l00014"/>00014 
<anchor xml:id="__p_i_d_controller_8cpp_source_1l00015"/>00015 &#32;&#32;&#32;&#32;_consigne&#32;=&#32;<emphasis role="keyword">new</emphasis>&#32;<emphasis role="keywordtype">double</emphasis>[_delay+1]{0};
<anchor xml:id="__p_i_d_controller_8cpp_source_1l00016"/>00016 }
<anchor xml:id="__p_i_d_controller_8cpp_source_1l00017"/>00017 
<anchor xml:id="__p_i_d_controller_8cpp_source_1l00018"/>00018 <emphasis role="keywordtype">double</emphasis>&#32;PIDController::getOutput(<emphasis role="keywordtype">double</emphasis>&#32;error)&#32;{
<anchor xml:id="__p_i_d_controller_8cpp_source_1l00019"/>00019 &#32;&#32;&#32;&#32;<emphasis role="keywordflow">for</emphasis>&#32;(uint8_t&#32;i=_delay&#32;;&#32;i&#32;&lt;&#32;0&#32;;&#32;i--){
<anchor xml:id="__p_i_d_controller_8cpp_source_1l00020"/>00020 &#32;&#32;&#32;&#32;&#32;&#32;&#32;&#32;_error[i]&#32;=&#32;_error[i-1];
<anchor xml:id="__p_i_d_controller_8cpp_source_1l00021"/>00021 &#32;&#32;&#32;&#32;&#32;&#32;&#32;&#32;_consigne[i]&#32;=&#32;_consigne[i-1];
<anchor xml:id="__p_i_d_controller_8cpp_source_1l00022"/>00022 &#32;&#32;&#32;&#32;}
<anchor xml:id="__p_i_d_controller_8cpp_source_1l00023"/>00023 &#32;&#32;&#32;&#32;_error[0]&#32;=&#32;error;
<anchor xml:id="__p_i_d_controller_8cpp_source_1l00024"/>00024 &#32;&#32;&#32;&#32;_consigne[0]&#32;=&#32;_K*(_error[0]-(_a0+_a1)*_error[1]+_a0*_a1*_error[1])+_consigne[1]*(1+_b0)-_consigne[2]*_b0;
<anchor xml:id="__p_i_d_controller_8cpp_source_1l00025"/>00025 
<anchor xml:id="__p_i_d_controller_8cpp_source_1l00026"/>00026 &#32;&#32;&#32;&#32;<emphasis role="keywordflow">return</emphasis>&#32;_consigne[0];
<anchor xml:id="__p_i_d_controller_8cpp_source_1l00027"/>00027 }
